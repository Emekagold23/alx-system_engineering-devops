#!/usr/bin/env bash
# debugging nginx port 80

# Check if Nginx is installed
if ! command -v nginx &> /dev/null; then
    echo "Nginx is not installed. Installing..."
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Get a list of active IPv4 IPs
active_ips=$(ip -o -4 addr show scope global | awk '{split($4, a, "/"); print a[1]}')

# Verify if Nginx is listening on port 80 for each active IPv4 IP
for ip in $active_ips; do
    if ! sudo lsof -i:"${ip}":80 &> /dev/null; then
        echo "Configuring Nginx to listen on port 80 for IP $ip..."
        # Update Nginx configuration to listen on port 80 for the IP
        echo "server {
            listen $ip:80;
            server_name _;
            location / {
                root /var/www/html;
                index index.html;
            }
        }" | sudo tee "/etc/nginx/sites-available/$ip" >/dev/null
        sudo ln -sf "/etc/nginx/sites-available/$ip" /etc/nginx/sites-enabled/
    fi
done

# Restart Nginx to apply the configuration changes
echo "Restarting Nginx service..."
sudo service nginx restart

echo "Nginx configured to listen on port 80 for all active IPv4 IPs."
